{
    "manifest_version": 2,
    "name": "WebVI Developer Tools",
    "description": "Adds WebVI debugging tools to the Chrome Developer Tools.",
    "version": "0.0.1",

    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

    "permissions": [
      "activeTab"
    ],
    "browser_action": {
      "default_title": "Enable WebVI Debugger for this page"
    },
    "background": {
      "page": "Support/webvi-devtools-background.html",
      "persistent": false
    },
    "devtools_page": "Support/webvi-devtools-load-panel.html"
}
